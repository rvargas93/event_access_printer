{% extends 'base.html.twig' %}

{% block title %}Create your ticket!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

    <form action="/ticket" method="post">
        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input name="email" type="email" class="form-control" id="email" placeholder="name@example.com" required>
        </div>
        <div class="mb-3">
            <label for="name" class="form-label">Name</label>
            <input name="name" type="text" class="form-control" id="name" required>
        </div>
        <div class="mb-3">
            <label for="lastName" class="form-label">Last name</label>
            <input name="lastName" type="text" class="form-control" id="lastName" required>
        </div>
        <div class="mb-3">
            <label for="birthday" class="form-label">Birthday</label>
            <input name="birthday" type="date" class="form-control" id="birthday" required>
        </div>
        <div class="mb-3">
            <label for="country" class="form-label">Country</label>
            <input name="country" type="text" class="form-control" id="country" required>
        </div>
        <div class="mb-3">
            <label for="city" class="form-label">City</label>
            <input name="city" type="text" class="form-control" id="city" required>
        </div>
        <div class="mb-3">
            <label for="province" class="form-label">Province</label>
            <input name="province" type="text" class="form-control" id="province" required>
        </div>
        <div class="mb-3">
            <label for="street" class="form-label">Street</label>
            <input name="street" type="text" class="form-control" id="street" required>
        </div>
        <div class="mb-3">
            <label for="zip" class="form-label">Zip</label>
            <input name="zip" inputmode="numeric" pattern="[0-9]{5}" title="Five digit zip code" type="text" class="form-control" id="zip" required>
        </div>     
        <select name="type" class="form-select" aria-label="Default select example" required>
            {% for type in types %}
                {# <option selected>Open this select menu</option> #}
                <option value="{{type.id}}">{{type.name}}</option>
            {% endfor %}
        </select>
        <button type="submit" class="btn btn-primary">Primary</button>
    </form>

</div>

{% endblock %}
